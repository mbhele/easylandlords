<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All landlords</h1>

    <% for (let landlord of landlords){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(landlord.images.length) {%>
                <img class="img-fluid" alt="" src="<%=landlord.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= landlord.title %> </h5>

                    <p class="card-text"><%= landlord.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= landlord.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/landlords/<%=landlord._id%>">View <%=landlord.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const landlords = { features: <%- JSON.stringify(landlords) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>